<Page x:Class="Pima.View.Pages.SharedPages.ArticulPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pima.View.Pages.SharedPages"
      xmlns:usercontrol1="clr-namespace:Pima.View.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ArticulPage">

    <Grid>
        <ScrollViewer>
            <WrapPanel>
                <usercontrol1:ArticleCard Margin="15" OpenArticleMouseClick="ArticleCard_OpenArticleMouseClick"/>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
