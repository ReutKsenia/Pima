<Page x:Class="Pima.View.Pages.SharedPages.OneArticle"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pima.View.Pages.SharedPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OneArticle">

    <Grid>
        <ScrollViewer>
            <StackPanel>
                <WrapPanel>
                    <TextBlock
                    HorizontalAlignment="Center"
                    FontFamily="{DynamicResource BaseFont}"
                    FontSize="{DynamicResource H3}"
                    Text="Легато на гитаре. Приемы легато «Hammer on» и «Pull off» на гитаре для начинающих"/>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
